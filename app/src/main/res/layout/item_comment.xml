<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCommentProfile"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCommentProfile"
        app:layout_constraintStart_toEndOf="@+id/tvCommenter"
        app:layout_constraintTop_toTopOf="@+id/ivCommentProfile"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tvCommenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivCommentProfile"
        app:layout_constraintStart_toEndOf="@+id/ivCommentProfile"
        app:layout_constraintTop_toTopOf="@+id/ivCommentProfile"
        app:layout_constraintVertical_bias="0.521"
        tools:text="serenazeng" />
</androidx.constraintlayout.widget.ConstraintLayout>